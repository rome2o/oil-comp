{
  "risk_assessment": {
    "Scope Creep": {
      "likelihood": "HIGH",
      "impact": "HIGH",
      "severity_score": 9,
      "description": "Client requests work outside agreed scope",
      "mitigation": [
        "\u2713 Defined deliverables in contract",
        "\u2713 Clear monthly hour caps (20/40/60)",
        "\u2713 Change order process for out-of-scope work",
        "\u2713 Monthly utilization reports",
        "\u2713 Quarterly scope review meetings"
      ],
      "owner": "Account Manager"
    },
    "Team Overwork": {
      "likelihood": "MEDIUM",
      "impact": "HIGH",
      "severity_score": 8,
      "description": "Team members work beyond allocated hours",
      "mitigation": [
        "\u2713 Hour tracking & monitoring (weekly)",
        "\u2713 Workload alerts when approaching 80% utilization",
        "\u2713 Escalation to Account Manager at 100%",
        "\u2713 No unpaid overages (triggers change order)",
        "\u2713 Team capacity planning meetings"
      ],
      "owner": "Operations Manager"
    },
    "Results Not Meeting Expectations": {
      "likelihood": "MEDIUM",
      "impact": "MEDIUM",
      "severity_score": 6,
      "description": "Revenue improvements don't match projections",
      "mitigation": [
        "\u2713 Performance guarantees (10-35% improvement in 90 days)",
        "\u2713 Conservative projections in contracts",
        "\u2713 Monthly performance reviews & course corrections",
        "\u2713 Transparent reporting with context",
        "\u2713 Flexibility to adjust strategy based on data"
      ],
      "owner": "Strategy Lead"
    },
    "Client Communication Breakdown": {
      "likelihood": "LOW",
      "impact": "MEDIUM",
      "severity_score": 4,
      "description": "Misalignment on priorities and progress",
      "mitigation": [
        "\u2713 Defined review cadence (bi-weekly for Growth tier)",
        "\u2713 Monthly strategic planning calls",
        "\u2713 Automated reporting dashboard",
        "\u2713 Dedicated account manager",
        "\u2713 Slack channel for quick communication"
      ],
      "owner": "Account Manager"
    },
    "Technology/Platform Issues": {
      "likelihood": "MEDIUM",
      "impact": "MEDIUM",
      "severity_score": 5,
      "description": "Shopify platform changes, app conflicts, outages",
      "mitigation": [
        "\u2713 Regular platform monitoring",
        "\u2713 Test environment for changes",
        "\u2713 Staying current with Shopify releases",
        "\u2713 Network of Shopify experts for consultation",
        "\u2713 Risk clause in contract (force majeure)"
      ],
      "owner": "Technical Lead"
    },
    "Team Turnover": {
      "likelihood": "LOW",
      "impact": "MEDIUM",
      "severity_score": 4,
      "description": "Key team member leaves mid-engagement",
      "mitigation": [
        "\u2713 Competitive compensation & margins support this",
        "\u2713 Knowledge documentation & handoff procedures",
        "\u2713 Cross-training on key accounts",
        "\u2713 2-week transition period for new team member",
        "\u2713 Client communication plan for transitions"
      ],
      "owner": "HR/Management"
    }
  },
